.main-section
  flex 1
  display flex
  flex-direction column
  width calc(100% - 330px)
  float left
  border-top-left-radius 4px
  overflow hidden
  position relative
  min-height 900px
  .section-header
    background rgba(0, 0, 0, .1)
    width 100%
    height 50px
    border-right 1px solid rgba(0, 0, 0, .15)
    padding 13px 15px
  .section-content
    flex 1
    background #fff
    border-right 1px solid rgba(0, 0, 0, .15)
    padding 13px 15px
  .column
    .card
      .content
        .meta
          margin-bottom 8px
        .description
          display inline
        .post-img
          width 85px
          float left
          margin-right 12px
          border-radius 2px
    &.paginator
      text-align center
      margin-bottom 13px
