.main-section
  flex 1
  display flex
  flex-direction column
  width calc(100% - 330px)
  float left
  border-top-left-radius 4px
  overflow hidden
  position relative
  min-height 900px
  .section-header
    background rgba(0, 0, 0, .1)
    width 100%
    height 50px
    border-right 1px solid rgba(0, 0, 0, .15)
    padding 13px 15px
  .section-content
    flex 1
    background #fff
    border-right 1px solid rgba(0, 0, 0, .1)
    padding 13px 15px
    border-bottom-left-radius 4px
    .article-wrapper
      padding-bottom 30px
      margin-bottom 20px
      .post-meta
        list-style none
        padding 0
        margin-top 0
        li
          display inline
          margin-right 20px
          color rgba(0, 0, 0, 0.4)
          .addthis_sharing_toolbox
            display inline
            float right
            margin-top -6px
          i
            color rgba(0, 0, 0, 0.87)
          img
            display inline
            box-shadow none
            width 18px
            height 18px
            margin 0
            margin-top -2px
          a
            color rgba(0, 0, 0, 0.4)
            &:hover
              text-decoration underline
      blockquote
        border-left 4px solid rgba(0, 0, 0, .2)
        padding-left 10px
        footer
          background #fff
          color rgba(0, 0, 0, 0.87)
          height 100%
          border-top none
          cite:before
            content "â€”"
            padding 0 5px
      img
        display block
        max-width 100%
        margin 0 auto
        border-radius 2px
        box-shadow 0 0 8px 0px #bebebe
        margin-bottom 20px
      figure.highlight
        background #2F3239
        margin 20px 0 20px 0
        border 1px solid rgba(0, 0, 0, .1)
        border-radius 4px
        padding 0
        figcaption
          border-bottom 1px solid rgba(255, 255, 255, .05)
          padding 5px 10px
          background rgba(0, 0, 0, .1)
          font-weight bold
        .gutter
          padding 0 10px 0 10px
          border-right 1px solid rgba(255, 255, 255, .05)
          .line, .hljs-number
            color rgba(255, 255, 255, .4) !important
        .code
          padding-left 10px
      .video-container
        position: relative;
        padding-bottom: 56.25%; /* 16:9 */
        padding-top: 25px;
        height: 0;
        margin-bottom 20px
        iframe
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
    .column
      .card
        .content
          .meta
            margin-bottom 8px
          .description
            display inline
          .post-img
            width 85px
            float left
            margin-right 12px
            border-radius 2px
        .extra.content
          a:hover
            text-decoration underline
            color rgba(0, 0, 0, 0.4)
      &.paginator
        text-align center
        margin-bottom 13px
