.sidebar
  flex 0
  display flex
  flex-direction column
  min-width 330px
  float right
  border-top-right-radius 4px
  .sidebar-header
    background rgba(0, 0, 0, .2)
    width 100%
    height 50px
    padding 13px 15px
    color #fff
    p
      float left
      font-size 1.14rem
      margin-bottom 0
    .social-icons
      margin-top 0
      margin-left 10px
      margin-bottom 0
      padding 0
      float left
      list-style none
      li
        display inline
        a
          color #fff
          font-size 1.8rem
  .sidebar-content
    flex 1
    overflow hidden
    background #fff
    clear both
    padding 13px 15px
    div
      margin-bottom 13px !important
